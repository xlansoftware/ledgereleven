@using Microsoft.AspNetCore.Identity
@inject SignInManager<ledger11.model.Data.ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Welcome to Ledger";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    html {
        scroll-behavior: smooth;
    }

    .hero-section {
        padding: 5rem 1rem;
        background: linear-gradient(135deg, #f0f4f8, #d9e2ec);
        text-align: center;
    }

    .hero-section h1 {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .hero-section p {
        font-size: 1.25rem;
        color: #555;
    }

    .feature-section {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        padding: 4rem 2rem;
        background-color: #ffffff;
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.6s ease-out;
    }

    .feature-section:nth-child(even) {
        background-color: #f8f9fa;
        flex-direction: row-reverse;
    }

    .feature-section.visible {
        opacity: 1;
        transform: translateY(0);
    }

    .screenshot-placeholder {
        width: 220px;
        height: 440px;
        background-color: #e0e0e0;
        border-radius: 1rem;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #888;
        font-size: 1rem;
        text-align: center;
    }

    .feature-text {
        max-width: 500px;
    }

    .feature-title {
        font-size: 1.75rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .feature-description {
        font-size: 1.1rem;
        color: #555;
    }

    .cta-section {
        text-align: center;
        padding: 3rem 1rem;
    }

    .cta-button {
        padding: 1rem 2rem;
        font-size: 1.2rem;
        border-radius: 999px;
        border: none;
        background-color: #007bff;
        color: white;
        transition: background-color 0.3s;
    }

    .cta-button:hover {
        background-color: #0056b3;
    }
</style>

<div class="cta-section">
    @if (!SignInManager.IsSignedIn(User))
    {
        <a href="/app" class="cta-button">Start Here</a>
    }
    else
    {
        <a href="/app" class="cta-button">Go to Ledger</a>
    }
</div>

@section Scripts {
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, {
            threshold: 0.1
        });

        document.querySelectorAll('.feature-section').forEach(section => {
            observer.observe(section);
        });
    });
</script>
}
