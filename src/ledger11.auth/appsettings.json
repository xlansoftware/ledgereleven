{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=../../data/auth.db"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "ledger11.auth.Services": "Debug",
      "ledger11.auth.Controllers": "Debug",
      "Microsoft.AspNetCore.StaticAssets": "Warning"
    }
  },
  "AllowedHosts": "*",

  "RsaKeyPath": "../../data/rsa_key.xml",

  "AuthConfig": {
    "Issuer": "http://localhost:5001",
    "ClientId": "clientapp",
    "ClientSecret": "supersecret",
    "ClientUrl": "http://localhost:5139",
    "RedirectUris": ["/signin-oidc", "/callback"],
    "AllowedPostLogoutRedirectUris": [
      "http://localhost:5139/signedout-callback"
    ],
    "AccessTokenLifetimeMinutes": 5,
    "RefreshTokenLifetimeDays": 30
  },

  "Smtp": {
    "Host": "smtp.your-server.com",
    "Port": 587,
    "EnableSsl": true,
    "UserName": "your-username",
    "Password": "your-password",
    "FromEmail": "noreply@yourdomain.com",
    "FromName": "Your Application Name"
  },

  "EmailFeatureFlags": {
    "ConfirmAccounts": false,
    "EnableEmailTestMode": true
  },

  "Authentication": {
    "Google": {
      "Enable": false,
      "ClientId": "your-google-client-id",
      "ClientSecret": "your-google-secret"
    },
    "Facebook": {
      "Enable": false,
      "ClientId": "",
      "ClientSecret": ""
    },
    "Microsoft": {
      "Enable": false,
      "ClientId": "your-microsoft-client-id",
      "ClientSecret": "your-microsoft-secret"
    },
    "Twitter": {
      "Enable": false,
      "ClientId": "your-twitter-api-key",
      "ClientSecret": "your-twitter-secret",
      "RetrieveUserDetails": true
    }
  }
}
